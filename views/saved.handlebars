{{> navs/saved}}
<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <h1>{{this.title}}</h1>
            <h3>{{this.subtitle}}</h3>
        </div>
    </div>
</div>

<div id="articles">
    {{#if articles}}
        {{#each articles}}
            <div class="well">
                <div class="row">
                    <div class="col col-md-8">
                        <h4><a href="{{this.link}}">{{this.title}}</a></h4>
                    </div>
                    <div class="col col-md-2">
                        <a class="btn btn-success" href="#" data-toggle="modal" data-target="#{{this.id}}">Add Notes</a>
                    </div>
                <div class="col col-md-2">
                    <form class="form-inline" action="/api/articles/unsave/{{this.id}}" method="POST">
                        <button type="submit" class="btn btn-warning">Unsave</button>
                    </form>
                </div>
              
                </div>
                
            </div>
            
{{> content/modal}}
</div>
            
        {{/each}}
       
    {{else}}
        <div class="well">
            <h4>Nothing Saved So Far!</h4>
        </div>
    {{/if}}
</div>